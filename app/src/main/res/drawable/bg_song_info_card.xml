<?xml version="1.0" encoding="utf-8"?>
<!--
歌曲信息卡片背景
作用：为歌曲信息提供美观的卡片式背景
特点：半透明渐变背景、圆角、边框效果
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 渐变背景：从半透明白色到更透明的白色 -->
    <gradient
        android:angle="135"
        android:centerColor="#25FFFFFF"
        android:endColor="#15FFFFFF"
        android:startColor="#35FFFFFF"
        android:type="linear" />
    
    <!-- 圆角：现代化的圆角设计 -->
    <corners android:radius="16dp" />
    
    <!-- 边框：微妙的白色边框 -->
    <stroke
        android:width="1dp"
        android:color="#30FFFFFF" />
        
</shape>
