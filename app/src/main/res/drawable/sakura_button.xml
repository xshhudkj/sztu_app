<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <shape android:shape="rectangle">
            <!-- 樱花主色背景 -->
            <solid android:color="@color/sakura_accent" />
            <!-- 圆角 -->
            <corners android:radius="8dp" />
            <!-- 渐变效果 -->
            <gradient
                android:startColor="@color/sakura_accent"
                android:endColor="@color/sakura_primary"
                android:angle="45" />
        </shape>
    </item>
</ripple> 