<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/common_divider_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- 进度 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/common_theme_color"
                    android:endColor="@color/common_theme_color_dark"
                    android:angle="0" />
                <corners android:radius="4dp" />
            </shape>
        </clip>
    </item>
    
</layer-list> 