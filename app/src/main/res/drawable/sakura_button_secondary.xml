<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D4A5B8"
                android:endColor="#E8C4D0"
                android:angle="45"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#C48FA8"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#F5E8EC"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#E8D0D8"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#DDB0C4"
                android:endColor="#F0D0DC"
                android:angle="45"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#CC9BB4"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector> 