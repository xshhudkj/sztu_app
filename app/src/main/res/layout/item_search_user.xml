<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- 用户头像 -->
    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_default_cover" />

    <!-- 用户信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_h1_color"
            android:textSize="22sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="音乐爱好者" />

        <TextView
            android:id="@+id/tvUserDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/common_text_h2_color"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="分享好音乐" />
    </LinearLayout>

    <!-- 关注按钮 -->
    <TextView
        android:id="@+id/btnFollow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        android:text="关注"
        android:textColor="@color/common_theme_color"
        android:textSize="16sp"
        android:background="@drawable/shape_follow_button" />
</LinearLayout>
